<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active position-relative">
      <%= image_tag "blog1.jpg", class: "d-block w-100", alt: "Slide 1" %>
      <button class="carousel-button btn btn-primary">Click Here</button>
    </div>
    <div class="carousel-item position-relative">
      <%= image_tag "blog2.jpg", class: "d-block w-100", alt: "Slide 2" %>
      <button class="carousel-button btn btn-primary">Click Here</button>
    </div>
    <div class="carousel-item position-relative">
      <%= image_tag "blog3.jpg", class: "d-block w-100", alt: "Slide 3" %>
      <button class="carousel-button btn btn-primary">Click Here</button>
    </div>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>
