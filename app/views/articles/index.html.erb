<h1>Articles listing page</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
    </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>

        <tr>

            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= button_to 'Show', article_path(article), method: :get %></td>
            <td><%= button_to 'Edit', edit_article_path(article), method: :get %></td>

            <td><%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>


        </tr>
        <%end%>

    </tbody>
</table>
<br>
<br>

<p><%= button_to 'New Article', new_article_path, method: :get%></p>
<p><%= button_to 'Go to Home Page ', root_path, method: :get%></p>
